<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <strong><%= pluralize(object.errors.count, "error") %> があります:</strong>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>