<!-- _show_monthly_attendances_modal.html.erb -->
<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="center">
        <%= form_with(url: attendances_update_monthly_attendances_modal_user_path(@user), method: :patch, local: true) do |f| %>
          <% @applicants.each do |applicant| %>
            <h3 class="modal-title">【<%= applicant.name %>からの1ヶ月分勤怠申請】</h3>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>年</th>
                  <th>月</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              <tbody>
                <% monthly_attendances = MonthlyAttendance.where(user_id: applicant.id, master_status: "申請中", instructor: @user.name) %>
                <% monthly_attendances.each do |monthly_attendance| %>
                  <tr>
                    <td><%= monthly_attendance.year %></td>
                    <td><%= monthly_attendance.month %></td>
                    <%= f.fields_for "monthly_attendances[#{monthly_attendance.id}]", monthly_attendance do |af| %>
                      <td><%= af.select :master_status, [["なし", "なし"], ["申請中", "申請中"], ["承認", "承認"], ["否認", "否認"]], { include_blank: "" }, { required: true, class: "head_of_department_approval_modal" } %></td>
                      <td><%= af.check_box :approval %></td>
                      <td><%= link_to "確認", show_attendances_status_req_user_path(applicant, monthly_attendance.id), class: "btn btn-primary btn-sm" %></td>
                      <%= af.hidden_field :id, value: monthly_attendance.id %>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
          <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>