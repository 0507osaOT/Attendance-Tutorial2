<!-- _head_of_department_approval_modal.html.erb -->
<% provide(:class_text, 'basic-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="center">
        <%= form_with(url: attendances_head_of_department_approval_modal_user_path(@user), method: :patch, local: true) do |f| %>
          <% @applicants.each do |applicant| %>
            <h3 class="modal-title">【<%= applicant.name %>からの所属長承認申請】</h3>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>指示者確認㊞</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              <tbody>
                <% monthly_attendances = MonthlyAttendance.where(user_id: applicant.id, master_status: "申請中", instructor: @user.name) %>
                <% monthly_attendances.each do |monthly_attendance| %>
                  <% attendances = Attendance.where(user_id: applicant.id, worked_on: Date.new(monthly_attendance.year.to_i, monthly_attendance.month.to_i)) %>
                  <% attendances.each do |attendance| %>
                    <tr>
                      <td><%= l(attendance.worked_on, format: :short) %></td>
                      <td><%= $days_of_the_week[attendance.worked_on.wday] %></td>
                      <%= f.fields_for "attendances[#{attendance.id}]", attendance do |af| %>
                        <td><%= af.select :status, [["なし", "なし"], ["申請中", "申請中"], ["承認", "承認"], ["否認", "否認"]], { include_blank: "" }, { required: true, class: "head_of_department_approval_modal" } %></td>
                        <td><%= af.check_box :approval, class: "head_of_department_approval_modal" %></td>
                        <td><%= link_to "確認", show_attendances_status_req_user_path(applicant, attendance.id), class: "btn btn-primary btn-sm" %></td>
                        <%= af.hidden_field :id, value: attendance.id %>
                      <% end %>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          <% end %>
          <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
        <% end %>
      </div> <!-- .center -->
    </div> <!-- .modal-body -->
  </div> <!-- .modal-content -->
</div> <!-- .modal-dialog -->





