<%# show.html.erb %>
<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to " ⇦ ", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-attendance" %>
        <%= l(@first_day, format: :middle) %> 時間管理表
      <%= link_to " ⇨ ", user_path(date: @first_day.next_month), class: "btn btn-primary btn-attendance" %>
      </td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.designated_work_start_time) %><br>
          指定勤務終了時間：<%= format_basic_info(@user.designated_work_end_time) %></td>
      <td  colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if current_user.superior %>
  <% if true %>
    <%= link_to "【所属長承認申請のお知らせ】", "#" %><br/>
  <% end %>
  <%= link_to "【勤怠変更申請のお知らせ】", attendances_show_change_modal_user_path, remote: true %>
  
  <% if @attendance_chg_req_sum.present? && @attendance_chg_req_sum > 0 %>
    <span class="tsuuti"><%= @attendance_chg_req_sum %>件の通知があります。</span>
  <% end %>
  <br/>
  <%= link_to "【残業申請のお知らせ】", attendances_show_overtime_modal_user_path, remote: true %>
  
  <% if @attendance_chg_req_sum.present? && @attendance_chg_req_sum > 0 %>
    <span class="tsuuti"><%= @attendance_chg_req_sum %>件の通知があります。</span>
  <% end %>
  <br/>
  <br/>
<% end %>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <%= link_to "CSV出力", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <%= link_to "勤怠修正ログ(承認済み)", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
</div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">	
    <thead>	
        <tr>
          <th rowspan="3">残業申請</th>
          <th rowspan="3">日付</th>
          <th rowspan="3">曜日</th>
          <th colspan="8">【実績】</th>
          <th colspan="5">【所定外勤務】</th>
        </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2" valign="bottom">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外残業</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認印</th>
      </tr>
     <tr>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
     </tr>
    </thead>
    <tbody>
       <% @attendances.each do |day| %>
        <% css_class = 
          case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
          when '土'
            'text-primary'
          when '日'
            'text-danger'
          end
        %>
      <tr>
        <td><%= link_to "残業申請",attendances_edit_overtime_application_req_user_path(@user,date: day.worked_on),remote: true, class: "btn btn-primary" %></td><%# 【1】残業申請 %>
        <td><%= l(day.worked_on, format: :short) %></td><%# 【2】日付 %>
        <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td><%# 【３】曜日 %>
        <td><%= l(day.started_at.floor_to(15.minutes), format: :hour) if day.started_at.present? %></td><%# 【4】出勤時間 [時] %>
        <td><%= l(day.started_at.floor_to(15.minutes), format: :min) if day.started_at.present? %></td><%# 【5】出勤時間 [分] %>
        <td>
            <% btn_text = attendance_state(day) %>
            <% if btn_text == "出勤" %>
            <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
        </td><%# 【6】出社ボタン %>
        <td><%= l(day.finished_at.floor_to(15.minutes), format: :hour) if day.finished_at.present? %></td><%# 【7】退勤時間 [時] %>
        <td><%= l(day.finished_at.floor_to(15.minutes), format: :min) if day.finished_at.present? %></td><%# 【8】退勤時間 [時] %>
        <td>
            <% if btn_text == "退勤" %>
            <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
        </td><%# 【6】退社ボタン %>
        <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
        </td><%# 【10】在社時間 %>
        <td><%= day.note %></td><%# 【11】備考 %>
        <td><%= l(day.overtime.floor_to(15.minutes), format: :hour) if day.overtime.present? %></td><%# 【12】終了予定時間：時 %>
        <td><%= l(day.overtime.floor_to(15.minutes), format: :min) if day.overtime.present? %></td><%# 【13】終了予定時間：分 %>
        <td><% if day.overtime.present? %>
             <%= calc_overtime(day.overtime, @user.designated_work_end_time).round(2) %>
            <% end %>
        </td><%# 【14】時間外時間 %>
        <td><%= day.overtime_content.present? ? day.overtime_content : "-" %></td><%# 【14】業務処理内容 %>
        <td><%= day.status.present? ? day.status : "-" %></td><%# 【15】指示者確認印 %>
      </tr>
    <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
      </tr>
      
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
      </tr>
    </tfoot> 
  </table>	
</div>

<!---モーダルウィンドウ表示--->
<div id="attendance_chg_req" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit_overtime_application_req" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="show_change_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="show_overtime_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>